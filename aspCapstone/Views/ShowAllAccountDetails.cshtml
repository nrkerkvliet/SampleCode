@model a_01_carApp.Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAllAccountDetails</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "InsertAccount")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model.ShowAllAccounts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAccount", new { id=item.Id }) |
                @Html.ActionLink("Details", "", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteAccount", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
